{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "cortex-debug",
        "request": "launch",
        "runToEntryPoint": "main",
        "preLaunchCommands": [
            "load",
            "monitor reset halt"
        ],
        "name": "Debug STM32 (OpenOCD)",
        "servertype": "openocd",
        "cwd": "${workspaceFolder}",
        "interface": "swd",
        "executable": "build/Debug/HMT26_FIRMWARE.elf",
        "device": "STM32F446RET6",
        "configFiles": [
            "interface/stlink.cfg",
            "target/stm32f4x.cfg"
        ],
        "gdbPath": "arm-none-eabi-gdb"
    },
    {
        "type": "cortex-debug",
        "request": "launch",
        "name": "Debug STM32 (External GDB Server)",
        "servertype": "external",
        "gdbTarget": "192.168.4.1:3333",
        "cwd": "${workspaceFolder}",
        "executable": "build/Debug/HMT26_FIRMWARE.elf",
        "device": "STM32F446RET6",
        "showDevDebugOutput": "raw",
        "preLaunchCommands": [
            "load",
            "monitor reset halt"
        ]
    },
    {
        "name": "OpenOCD Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "/workspaces/HMT26_STM32-Template/build/Debug/HMT26_FIRMWARE.elf",
        "svdPath": "",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb-multiarch",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            },
            {
                "description": "Set remote target to port 3333",
                "text": "target remote :3333",
                "ignoreFailures": false
            }
        ]
    }
]
}