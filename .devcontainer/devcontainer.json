{
    "name": "STM32 Development Container",
    "dockerFile": "Dockerfile",
    "context": "..",
    "mounts": [
        "source=${env:HOME}/.ssh,target=/home/vscode/.ssh,type=bind",
        "source=/dev/bus/usb,target=/dev/bus/usb,type=bind"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "mcu-debug.debug-tracker-vscode",
                "marus25.cortex-debug",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools"
            ]
        }
    },
    // "runArgs": ["--privileged", "--device", "/dev/bus/usb/001/002"], // Adjust USB device if needed, use lsusb to identify the identifier. Priviliged should be enough in most cases.
    "runArgs": ["--privileged"], // This seems to work fine, otherwise use the command above.
    "remoteUser": "root"
}